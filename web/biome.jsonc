{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "files": {
    "include": ["codegen.ts", "src/**/*.ts", "src/**/*.tsx"],
    "ignore": ["src/generated/**/*.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
